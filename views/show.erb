<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= @movie.title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  </head>
  <body>
    <section class="min-vh-100 p-5">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="d-flex align-items-center flex-column">
              <div class="mb-auto bg-dark box">
                <img src="https://picsum.photos/id/<%= @movie.id %>/600/500" class="card-img-top" alt="...">
              </div>
            </div>
            <div class="d-flex align-items-center flex-column">
              <div class="mt-auto">
                <strong>Year: </strong><%= @movie.year %>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="h1 text-center"><%= @movie.title %></div>
            <dl class="row">
              <dt class="col-sm-3">Director:</dt>
              <dd class="col-sm-9"><%= @movie.director %></dd>
              <dt class="col-sm-3">Describe:</dt>
              <dd class="col-sm-9"><%= @movie.describe %></dd>
            </dl>
            <a href="/movies">回主頁</a>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
